    "validator",
    "typescript"
  ],
  "author": {
    "name": "Bruno Rocha",
    "email": "bruno@khaneland.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kledenai/jsonverify.git"
  },
  "bugs": {
    "url": "https://github.com/kledenai/jsonverify/issues"
  },
  "homepage": "https://github.com/kledenai/jsonverify#readme",
